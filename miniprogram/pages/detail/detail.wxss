/* detail.wxss */

page {
  background-color: #F2F2F7;
}

.container {
  min-height: 100vh;
  background-color: #F2F2F7;
}

/* ─── Page Header ─── */
.page-header {
  padding: 56rpx 40rpx 44rpx;
}

.product-header {
  background: linear-gradient(160deg, #1A2340 0%, #1D3461 100%);
}

.material-header {
  background: linear-gradient(160deg, #14291D 0%, #166534 100%);
}

.back-btn {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.back-arrow {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1;
  margin-right: 4rpx;
  font-weight: 200;
}

.back-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 400;
}

.header-body {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.header-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #FFFFFF;
  flex: 1;
  line-height: 1.3;
}

.header-badge {
  display: inline-flex;
  align-items: center;
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  letter-spacing: 1rpx;
  align-self: flex-start;
}

.product-badge {
  background: rgba(59, 130, 246, 0.25);
  color: #93C5FD;
  border: 1rpx solid rgba(59, 130, 246, 0.3);
}

.material-badge {
  background: rgba(34, 197, 94, 0.25);
  color: #86EFAC;
  border: 1rpx solid rgba(34, 197, 94, 0.3);
}

/* ─── Content ─── */
.content {
  padding: 30rpx 28rpx 80rpx;
}

/* ─── Hero Cost Card ─── */
.hero-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 52rpx 40rpx;
  text-align: center;
  margin-bottom: 28rpx;
  box-shadow: 0 4rpx 28rpx rgba(0, 0, 0, 0.08);
}

.hero-label {
  display: block;
  font-size: 22rpx;
  font-weight: 700;
  color: #AEAEB2;
  letter-spacing: 4rpx;
  margin-bottom: 24rpx;
}

.hero-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 20rpx;
}

.hero-currency {
  font-size: 44rpx;
  font-weight: 600;
  color: #C9943A;
  margin-right: 6rpx;
}

.hero-number {
  font-size: 100rpx;
  font-weight: 800;
  color: #1C1C1E;
  line-height: 1;
  letter-spacing: -2rpx;
}

.hero-unit {
  font-size: 30rpx;
  color: #8E8E93;
  margin-left: 10rpx;
}

.hero-sub {
  display: block;
  font-size: 24rpx;
  color: #AEAEB2;
}

/* ─── Section ─── */
.section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-hd {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1C1C1E;
  letter-spacing: 1rpx;
}

.section-badge {
  font-size: 22rpx;
  color: #8E8E93;
  background: #F2F2F7;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

/* ─── Ingredient Row ─── */
.ingredient-row {
  display: flex;
  align-items: center;
  padding: 22rpx 0;
  border-bottom: 1rpx solid #F2F2F7;
}

.ingredient-row:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.ingredient-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  margin-right: 22rpx;
  flex-shrink: 0;
}

.dot-blue {
  background: #3B82F6;
}

.dot-green {
  background: #22C55E;
}

.ingredient-body {
  flex: 1;
  min-width: 0;
}

.ingredient-top {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
  gap: 10rpx;
}

.ingredient-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.ingredient-tag {
  font-size: 20rpx;
  font-weight: 500;
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
}

.tag-blue {
  background: #EFF6FF;
  color: #2563EB;
}

.tag-green {
  background: #F0FDF4;
  color: #16A34A;
}

.ingredient-formula {
  font-size: 24rpx;
  color: #8E8E93;
  display: block;
}

.ingredient-cost {
  font-size: 32rpx;
  font-weight: 700;
  color: #C9943A;
  margin-left: 20rpx;
  flex-shrink: 0;
}

/* ─── Spec Grid ─── */
.spec-grid {
  display: flex;
  align-items: center;
  background: #F8F8FA;
  border-radius: 16rpx;
  padding: 36rpx 20rpx;
}

.spec-cell {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.spec-divider {
  width: 1rpx;
  height: 80rpx;
  background: #E5E5EA;
}

.spec-label {
  font-size: 24rpx;
  color: #8E8E93;
  margin-bottom: 14rpx;
  letter-spacing: 1rpx;
}

.spec-value {
  font-size: 52rpx;
  font-weight: 800;
  color: #1C1C1E;
  line-height: 1.1;
}

.price-amber {
  color: #C9943A;
}

.spec-unit-text {
  font-size: 24rpx;
  color: #AEAEB2;
  margin-top: 8rpx;
}

/* ─── Category Section ─── */
.category-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 36rpx;
}

.category-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #3C3C43;
}

.category-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 28rpx;
  border-radius: 30rpx;
  gap: 10rpx;
}

.tag-blue-lg {
  background: #EFF6FF;
}

.tag-green-lg {
  background: #F0FDF4;
}

.category-icon {
  font-size: 30rpx;
}

.category-text {
  font-size: 28rpx;
  font-weight: 600;
  color: inherit;
}

.tag-blue-lg .category-text {
  color: #2563EB;
}

.tag-green-lg .category-text {
  color: #16A34A;
}

/* ─── Empty State ─── */
.empty-detail {
  text-align: center;
  padding: 50rpx 0 20rpx;
  color: #AEAEB2;
  font-size: 28rpx;
}
